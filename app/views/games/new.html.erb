<h1>New Game</h1>

<div class="d-flex gap-2">
  <% @letters.each do |letter| %>
    <div class="btn btn-primary disabled">
      <%= letter %>
    </div>
  <% end %>
</div>

<p>What is the longest word you can find?</p>

<form action="/score" method="post" data-turbo="false">

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div class="input-group mb-4">
    <input type="text" name="word" class="form-control" placeholder="Your word...">
    <button type="submit" class="btn btn-outline-primary">Play</button>
  </div>

  <input type="hidden" name="letters" value="<%= @letters.join %>">
</form>

<%= link_to "Home", root_path, class: "btn btn-primary my-4" %>
